{
  "name": "vue-sidebar-kit",
  "version": "1.0.0",
  "description": "Production-ready Vue 3 Sidebar Kit with Inertia.js, Vue Router 4, and plain anchor support. Tailwind-first, accessible, and deeply customizable.",
  "author": {
    "name": "WPDiggerStudio",
    "email": "diggerwp@gmail.com"
  },
  "license": "MIT",
  "type": "module",

  "repository": {
    "type": "git",
    "url": "git+https://github.com/WPDiggerStudio/vue-sidebar-kit.git"
  },
  "homepage": "https://github.com/WPDiggerStudio/vue-sidebar-kit#readme",
  "bugs": {
    "url": "https://github.com/WPDiggerStudio/vue-sidebar-kit/issues"
  },

  "main": "./dist/vue-sidebar-kit.cjs",
  "module": "./dist/vue-sidebar-kit.js",
  "types": "./dist/types/index.d.ts",
  "style": "./dist/style.css",

  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/vue-sidebar-kit.js",
      "require": "./dist/vue-sidebar-kit.cjs"
    },
    "./style.css": "./dist/style.css",
    "./package.json": "./package.json"
  },

  "sideEffects": [
    "**/*.css"
  ],

  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],

  "keywords": [
    "vue",
    "vue3",
    "sidebar",
    "navigation",
    "menu",
    "drawer",
    "tailwind",
    "vue-router",
    "inertia",
    "inertiajs",
    "accessible",
    "sidebar-kit",
    "admin-panel",
    "dashboard"
  ],

  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:types",
    "build:types": "tsc -p tsconfig.types.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .js,.vue,.ts",
    "prepublishOnly": "npm run build"
  },

  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "vue-router": {
      "optional": true
    },
    "@inertiajs/vue3": {
      "optional": true
    }
  },

  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/tsconfig": "^0.5.0",
    "jsdom": "^27.4.0",
    "typescript": "~5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "vue": "^3.4.0",
    "vue-tsc": "^1.8.0"
  }
}
